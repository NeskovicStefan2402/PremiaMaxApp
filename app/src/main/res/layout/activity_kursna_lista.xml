<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey"
    android:padding="10dp"
    tools:context=".Kontakt">

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="530dp"
        android:layout_x="0dp"
        android:layout_y="295dp"
        android:background="@color/siva">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_x="26dp"
                android:layout_y="20dp"
                android:gravity="center"
                android:text="Menjacnica PremiaMax\nFrancuska 37/A, Beograd \n          "
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/imageView"
                tools:layout_editor_absoluteX="72dp"
                tools:layout_editor_absoluteY="245dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="349dp"
                android:layout_height="37dp"
                android:layout_x="24dp"
                android:layout_y="117dp"
                android:gravity="center"
                android:text="011/1112223"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="354dp"
                android:layout_height="66dp"
                android:layout_x="21dp"
                android:layout_y="161dp"
                android:gravity="center"
                android:text="contact@menjacnicaPremiaMax.com"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="331dp"
                android:layout_height="268dp"
                android:layout_x="35dp"
                android:layout_y="236dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </AbsoluteLayout>
    </ScrollView>

    <Button
        android:id="@+id/KursnalistaBtn"
        android:layout_width="95dp"
        android:layout_height="88dp"
        android:layout_x="196dp"
        android:layout_y="195dp"
        android:background="@drawable/radius_btn"
        android:onClick="kursnaktKlikKontakt"
        android:text="Kursna lista"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="255dp" />


    <Button
        android:id="@+id/kalkulatorBtn"
        android:layout_width="95dp"
        android:layout_height="88dp"
        android:layout_x="98dp"
        android:layout_y="195dp"
        android:background="@drawable/radius_btn"
        android:onClick="kalkulatorKlikKontakt"
        android:text="Kalkulator"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="255dp" />

    <Button
        android:id="@+id/KontaktBtn"
        android:layout_width="95dp"
        android:layout_height="88dp"
        android:layout_x="294dp"
        android:layout_y="195dp"
        android:background="@drawable/radius_btn"
        android:text="Kontakt"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="255dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="95dp"
        android:layout_height="88dp"
        android:layout_x="0dp"
        android:layout_y="195dp"
        android:background="@drawable/radius_btn"
        android:onClick="OnamaKlikKontakt"
        android:text="O nama"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="255dp" />

    <ImageView
        android:id="@+id/imageViewNovi"
        android:layout_width="203dp"
        android:layout_height="131dp"
        android:layout_x="24dp"
        android:layout_y="-2dp"
        android:background="@drawable/logopremiamax" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="84dp"
        android:layout_height="81dp"
        android:layout_x="310dp"
        android:layout_y="87dp"
        android:background="@drawable/mail"
        android:onClick="kontaktNas"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="63dp" />

</AbsoluteLayout>